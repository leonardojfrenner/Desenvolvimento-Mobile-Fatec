<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_pessoa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txv_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_pessoa"
        app:layout_constraintStart_toStartOf="@id/img_pessoa"
        app:layout_constraintEnd_toEndOf="@id/img_pessoa"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/txv_telefone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txv_nome"
        app:layout_constraintStart_toStartOf="@id/img_pessoa"
        app:layout_constraintEnd_toEndOf="@id/img_pessoa"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_ligar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ligar"
        android:background="@color/green"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/txv_telefone"
        app:layout_constraintStart_toStartOf="@id/txv_nome"
        app:layout_constraintEnd_toEndOf="@id/txv_telefone"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_whatsapp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WhatsApp"
        android:background="@color/blue"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_ligar"
        app:layout_constraintStart_toStartOf="@id/txv_nome"
        app:layout_constraintEnd_toEndOf="@id/txv_telefone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
